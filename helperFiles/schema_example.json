{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Component Data Type Schema",
  "type": "object",
  "properties": {
    "propType": {
      "type": "string",
      "enum": ["string", "number", "array<string>", "array<number>"],
      "description": "The property type, either a single value or an array of values."
    },
    "propTypeMulti": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["string", "number", "array<string>", "array<number>"],
        "enumNames": [
          "Single Value (String)",
          "Single Value (Number)",
          "Array of Strings",
          "Array of Numbers"
        ],
        "description": "The property type, either a single value or an array of values."
      },
      "uniqueItems": true,  
      "minItems": 1,        
      "maxItems": 4         
    },
    "inputType": {
      "type": "string",
      "description": "Determines the input type based on the propType."
    },
    "inputOptions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "An array of options for inputs like select or checkboxes."
    },
    "inputName": {
      "type": "string",
      "description": "The name of the input."
    }
  },
  "required": ["propType", "inputType", "inputName"],
  "allOf": [
    {
      "if": {
        "properties": { "propType": { "enum": ["string", "number"] } }
      },
      "then": {
        "properties": {
          "inputType": {
            "enum": ["text", "number", "select"]
          }
        }
      },
      "else": {
        "if": {
          "properties": { "propType": { "enum": ["array<string>", "array<number>"] } }
        },
        "then": {
          "properties": {
            "inputType": {
              "enum": ["checkbox", "multi-select"]
            }
          }
        }
      }
    }
  ]
}
