{
  "name": "express_postresql_api",
  "version": "1.0.0",
  "description": "express application that works in tandem with postgres to provide a backend api for a CMS frontend app",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "init:db": "node init.js",
    "start:services": "npx pm2 start ecosystem.config.cjs --no-daemon",
    "stop:services": "npx pm2 stop all",
    "restart:services": "npx pm2 restart all --no-daemon",
    "status:services": "npx pm2 list",
    "dev": "nodemon index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/furlanandraz/express_postresql_api.git"
  },
  "author": "Andraz Furlan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/furlanandraz/express_postresql_api/issues"
  },
  "homepage": "https://github.com/furlanandraz/express_postresql_api#readme",
  "dependencies": {
    "child_process": "^1.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "esm-module-alias": "^2.2.1",
    "express": "^4.21.2",
    "module-alias": "^2.2.3",
    "nodemon": "^3.1.9",
    "pg": "^8.13.1",
    "pg-listen": "^1.7.0",
    "pm2": "^5.4.3"
  },
  "imports": {
    "#clients": "./clients/index.js",
    "#middleware/*": "./server/middleware/*",
    "#DAO/*": "./DAO/*"
  }
}
