{
  "name": "express_postresql_api",
  "version": "1.0.0",
  "description": "express application that works in tandem with postgres to provide a backend api for a CMS frontend app",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "init:db": "node modules/sql/init.js",
    "init:types": "npx prisma db pull && npx prisma generate",
    "app:start": "docker start redis-container && npx pm2 start ecosystem.config.cjs && pm2 logs",
    "app:stop": "docker stop redis-container && npx pm2 stop all",
    "app:restart": "docker restart redis-container && npx pm2 restart all && pm2 logs",
    "app:status": "npx pm2 list",
    "cache:notify": "node cache/_global/notify.js",
    "types:init": "node modules/json/parse.js",
    "routes:build": "node modules/sveltekit-adapter/routes.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/furlanandraz/express_postresql_api.git"
  },
  "author": "Andraz Furlan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/furlanandraz/express_postresql_api/issues"
  },
  "homepage": "https://github.com/furlanandraz/express_postresql_api#readme",
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "ajv": "^8.17.1",
    "bcrypt": "^5.1.1",
    "cookie": "^1.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "deep-object-diff": "^1.1.9",
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "express": "^4.21.2",
    "he": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.13.1",
    "pg-format": "^1.0.4",
    "pg-listen": "^1.7.0",
    "pm2": "^5.4.3",
    "redis": "^4.7.0",
    "sharp": "^0.33.5",
    "systeminformation": "^5.25.11",
    "ws": "^8.18.0"
  },
  "imports": {
    "#clients": "./modules/clients/index.js",
    "#middleware/*": "./server/middleware/*",
    "#DAO/*": "./modules/DAO/*",
    "#serverFunctions/*": "./server/functions/*",
    "#serverConfig/*": "./server/config/*"
  },
  "devDependencies": {
    "prisma": "^6.8.2",
    "prisma-json-schema-generator": "^5.1.5",
    "prisma-zod-generator": "^0.8.13"
  }
}
